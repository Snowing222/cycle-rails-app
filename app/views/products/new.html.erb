<h1>CREATE A NEW PRODUCT</h1>
<%=form_for @product do |f|%>
  <p>
  <strong><%=f.label :season%></strong>
  <%=f.collection_select :season, @seasons, :to_s, :to_s %>
  </p>

  <p>
  <strong><%=f.label :style_number%></strong>
  <%=f.text_field :style_number %>
  </p>

  <p>
  <strong><%=f.label :image_url%></strong>
  <%=f.text_field :image_url %>
  </p>

  <p>
  <strong><%=f.label :description%></strong>
  <%=f.text_area :description, size: '50x10'%>
  </p>

  <p>
  <strong><%=f.label :status%></strong>
  <%=f.collection_select :status, ["active", "inactive"], :to_s, :to_s%>
  </p>

  <p>
  <strong><%=f.label :design_partner%></strong>
  <%=f.collection_select :design_partner_id, @design_partners, :id, :name%>
  </p>

  
  <p>
  <strong><%=f.label :manufacturer_partner%></strong>
  <%=f.collection_select :manufacturer_partner_id, @manufacturer_partners, :id, :name%>
  </p>
  
  <%=f.hidden_field :production_partner_id%>

  <%=f.submit%>
<%end%>
